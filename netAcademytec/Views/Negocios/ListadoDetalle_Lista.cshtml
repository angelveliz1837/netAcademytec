@model IEnumerable<Domain.Entity.Detalle_Lista>

@{
    ViewBag.Title = "ListadoDetalle_Lista";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="row">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <div class="d-flex align-items-center">
                    <h2>ListadoDetalle_Lista</h2>
                    <button class="btn btn-primary btn-round ms-auto"
                            data-bs-toggle="modal"
                            data-bs-target="#addRowModal">
                        <i class="fa fa-plus"></i>
                        @Html.ActionLink("Create New", "CreateDetalle_Lista")
                    </button>
                </div>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table id="add-row"
                           class="display table table-striped table-hover">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.iddetallelista)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.idlista)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.idmaterial)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.cantidad)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.preciocosto)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.iddetallelista)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.idlista)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.idmaterial)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.cantidad)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.preciocosto)
                                </td>
                                <td>
                                    @Html.ActionLink("Edit", "EditDetalle_Lista", new { id = item.iddetallelista }) |
                                    @Html.ActionLink("Details", "DetailsDetalle_Lista", new { id = item.iddetallelista }) |
                                    @Html.ActionLink("Delete", "DeleteDetalle_Lista", new { id = item.iddetallelista })
                                </td>
                            </tr>
                        }

                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
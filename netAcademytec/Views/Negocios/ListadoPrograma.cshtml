@model IEnumerable<Domain.Entity.Programa>

@{
    ViewBag.Title = "ListadoPrograma";
}

<h2>ListadoPrograma</h2>

<p>
    @Html.ActionLink("Create New", "CreatePrograma")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.idprograma)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.titulo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idlibro)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.idprograma)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.titulo)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.descripcion)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.idlibro)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditPrograma", new { id = item.idprograma }) |
            @Html.ActionLink("Details", "DetailsPrograma", new { id = item.idprograma }) |
            @Html.ActionLink("Delete", "DeletePrograma", new { id = item.idprograma })
        </td>
    </tr>
}

</table>
